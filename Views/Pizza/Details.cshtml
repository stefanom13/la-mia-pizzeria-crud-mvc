
@model Pizza


<div class="container text-dark">
    <h2>@Model.NomePizza</h2>
    <div class="row">
        <div class="w-50">
            <img class="w-100" src="@Model.PathImage"/>
        </div>
        <div class="w-50">
            <h3>Descrizione</h3>
            <p>@Model.Descrizione</p>
            <h3>Prezzo</h3>
            <span>@Model.Prezzo &euro;</span>
             <h3>Categoria</h3>
              <span>@Model.Categorie.NomeCategoria</span>   
            
         </div>
    <a  class="btn btn-danger mt-2 " href="@Url.Action("Index","Pizza")">Indietro</a>
</div>

